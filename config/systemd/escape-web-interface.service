[Unit]
Description=Escape Sound System Web Interface
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/escape-sound-system
Environment=ESCAPE_WEB_HOST=0.0.0.0
Environment=ESCAPE_WEB_PORT=8080
ExecStart=/usr/bin/python3 /home/pi/escape-sound-system/scripts/web_interface.py
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
